<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center"
    android:background="@color/water"
    android:layoutDirection="rtl"
    android:textAlignment="center"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:focusable="false"
    android:focusableInTouchMode="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layoutDirection="rtl"
        android:textAlignment="center"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:paddingEnd="5dp"
        android:background="@drawable/background_white"
        android:paddingTop="2dp"
        android:paddingBottom="1dp"
        tools:ignore="RtlSymmetry">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center"
            android:layoutDirection="ltr"
            android:textAlignment="center"
            android:background="@drawable/background_white"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            tools:ignore="NestedWeights">

            <ImageView
                android:id="@+id/picture_path"
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_weight="0"
                android:background="@color/lowDarkfont"
                android:src="@drawable/ic_post_person" />

            <TextView
                android:id="@+id/txtUserName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="left"
                android:paddingEnd="3dp"
                android:text="User name"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#1976D2"
                android:textSize="17sp"
                android:textStyle="bold"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/txt_tweet_date"
                android:paddingEnd="1dp"
                android:layout_weight="0"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="MM/DD/YYYY"
                android:textSize="10sp"/>
        </LinearLayout>

        <TextView
            android:fontFamily="sans-serif-medium"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="5dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/Tweet"
            android:id="@+id/txt_tweet"
            android:gravity="left"
            android:textAlignment="gravity"
            android:background="@color/white"
            android:paddingBottom="2dp"
            android:textSize="23sp"
            android:textColor="@color/black"
            tools:ignore="RtlHardcoded" />

        <ImageView
            android:background="@drawable/background_white"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_width="fill_parent"
            android:src="@drawable/tanuki"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/tweet_picture"
            android:layout_weight="0"
            android:layout_marginBottom="1dp"
            android:layout_height="100pt" />

        <LinearLayout
            android:paddingStart="10dp"
            android:paddingEnd="3dp"
            android:paddingTop="3dp"
            android:paddingBottom="5dp"
            android:layoutDirection="ltr"
            android:orientation="horizontal"
            android:background="@drawable/background_white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

<!--            <ImageView-->
<!--                android:layout_width="25dp"-->
<!--                android:layout_height="25dp"-->
<!--                android:id="@+id/iv_share"-->
<!--                android:layout_marginRight="8dp"-->
<!--                android:background="@drawable/ic_favorite" />-->
        </LinearLayout>

    </LinearLayout>
</LinearLayout>